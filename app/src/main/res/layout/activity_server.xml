<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_server"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.anyway.free.pockercustomer.Activity.ServerActivity">

    <SurfaceView
        android:id="@+id/surface"
        android:layout_width="640dip"
        android:layout_height="480dip" />

    <!--<ImageView
        android:id="@+id/progress_bar"
        android:layout_width="32dip"
        android:layout_height="32dip"
        android:src="@drawable/loading_single_frame" />

    <TextView
        android:id="@+id/server_page"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server" /> !-->

    <TextView
        android:id="@+id/server_text"
        android:layout_width="fill_parent"
        android:layout_height="60dip"
        android:singleLine="true"
        android:textSize="40sp"
        android:layout_marginTop="100dp"
        android:text="正在连接服务器,请稍候。。。"/>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="80dip"
        android:orientation="horizontal"
        android:layout_marginTop="300dp">

        <Button
            android:id="@+id/server_btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="20sp"
            android:visibility="gone"
            android:text="开启wifi"/>

        <Button
            android:id="@+id/server_btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="20sp"
            android:visibility="gone"
            android:text="关闭wifi"/>
	<Button
            android:id="@+id/server_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="20sp"
            android:text="返回"/>

    </LinearLayout>



</FrameLayout>
